<form action="/" method="get">
  <input class="searchbox" type="text" name="search" value="<%= @search %>">
  <% if !@search.nil? %>
    <h4><%= !@results.empty? ? 'Treffer' : 'Keine Treffer' %></h4>
    <ul>
      <% @results.each do |node| %>
        <li><%= erb "list_item_#{node.labels.first}".to_sym, :locals => { :item => node } %></li>
      <% end %>
    </ul>
  <% end %>
</form>
